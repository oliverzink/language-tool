{
    "manifest_version": 2,
    "name": "Languify-Language-Tool",
    "version": "1",
    "browser_action":{
        "default_icon": "icon.png",
        "default_popup": "popup.html",
        "default_title": "YAY"
    },

    "permissions": [
        "activeTab",
        "storage"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": ["index.js"],
            "html": ["popup.html"]
        }
    ]

}